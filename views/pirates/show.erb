<h1>Display your Pirate here</h1>
    <div class="pirate">
    <h3>Name:<%=@pirate.name%></h3>
    <h4>Weight:<%=@pirate.weight%></h4>
    <h4>Height<%=@pirate.height%></h4>

<h2>Display your first ship here</h2>
    <h1>Ship One</h1>
    <%@ships.each_with_index do |ship,index|%>
    <% if index == 1%>
        <div class="ship">
        <p>Name:<%= ship.name%></p>
        <p>Name:<%= ship.type%></p>
        <p>Name:<%= ship.booty%></p>
       <%end%>
    <%end%>
<h2>Display your second ship here</h2>
    <h1>Ship Two</h1>
<% @ships.each.with_index do |ship, index| %>
  <div class="ship">
    <% if index == 1 %>
    <p>Name: <%= ship.name %></p>
    <p>Type: <%= ship.type %></p>
    <p>Booty: <%= ship.booty %></p>
    <% end %>
  <% end %>
  </div>

